@model BookShopWebASP.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <section id="registerForm">
        @using (Html.BeginForm("Register", "Users", null, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h1 class="text-dark text-center"><b>Register</b></h1>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group form-row">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Example: NghiaDeptrai" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.FullName, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Example: Nghia Dep Trai" })
                    @Html.ValidationMessageFor(m => m.FullName)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Example: nghiadeptrai@gmail.com" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Example: 210 Man Thien, Quan 9, HCM" })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.Phone, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Example: 0987654321" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.Birthday, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Birthday, new {@type="date", @class = "form-control", @placeholder="mm/dd/yyyy" })
                    @Html.ValidationMessageFor(m => m.Birthday)
                </div>
            </div>
            <div class="form-group form-row justify-content-center">
                <input type="submit" value="Register" class="col-md-8 btn btn-success" />
            </div>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}