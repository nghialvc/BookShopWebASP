@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-dark">Admin</h2>
<hr />
<div class="row">
    <div class="col-md-4 card bg-light form-group" style="height:700px;">
        <h2 class="card-title text-center form-group text-dark">Tables</h2>
        @foreach (var item in BookShopWebASP.Controllers.AdminController.Tables.Keys)
        {
            @Html.ActionLink(item, "ViewTable", "Admin", new { Page = 1, TableName = item }, new { @class = "btn btn-info card-title form-group text-decoration-none" })
        }
    </div>
    <div class="col-md-8 form-group">
        @RenderBody()
    </div>
</div>
@section scripts
{
    @RenderSection("scripts", false);
}