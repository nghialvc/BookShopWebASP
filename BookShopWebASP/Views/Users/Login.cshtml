@model BookShopWebASP.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Users", new { @returnUrl = ViewBag.returnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h1 class="text-dark text-center"><b>Log in</b></h1>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-row form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-row form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-row form-group justify-content-center">
                <input type="submit" value="Log in" class="col-md-8 btn btn-success" />
            </div>
            <p class="form-row text-center">
                @Html.ActionLink("Register", "Register", "Users", new { @class = "text-decoration-none" }) &nbsp; if you don't have any account.
            </p>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}