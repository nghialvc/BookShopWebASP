@model BookShopWebASP.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <section id="changePasswordForm">
        @using (Html.BeginForm("ChangePassword", "Users", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h1 class="text-dark"><b>Change Password</b></h1>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group form-row">
                @Html.Label("UserName", new { @class = "col-md-4" })
                <div class="col-md-8 text-left">
                    @Html.Label(Session["UserName"].ToString(), new { @class = "control-label" })
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>
            <div class="form-group form-row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="form-group form-row justify-content-center">
                <input type="submit" value="Change Password" class="col-md-8 btn btn-success" />
            </div>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}